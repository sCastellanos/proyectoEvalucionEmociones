<parameters>

<!-- Theories considered for evaluation of incoming stimuli and generation of emotions --> 
	<evaluationTheory>Scherer</evaluationTheory>
	<emotionsTheory>Scherer</emotionsTheory>


<!-- Dimensions used to evaluate incoming stimuli --> 
	<dimension id = "pleasure">
		<linguistic_term>
			<name>low</name>
			<mship_values>(0,1) (1, 0.3) (0.4,0)</mship_values>
