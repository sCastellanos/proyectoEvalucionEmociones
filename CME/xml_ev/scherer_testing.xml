<!-- Rules for generating emotions --> 

	<rule> IF pleasure IS low AND arousal IS low THEN happiness IS low</rule>
	<rule> IF pleasure IS medium AND arousal IS medium THEN happiness IS medium</rule>
	<rule> IF pleasure IS high AND arousal IS high THEN happiness IS high</rule>

